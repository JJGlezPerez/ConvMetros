<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_height="match_parent">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:columnCount="2"
        android:rowCount="4"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/value"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="20dp"
            android:layout_row="0"
            android:layout_columnSpan="2"
            android:gravity="center"
            android:text="1" />

        <RadioGroup
            android:id="@+id/from_group_RB"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="30dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnSpan="1">
            <RadioButton
                android:id="@+id/from_cm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="8pt"
                android:text="Centímetros" />
            <RadioButton
                android:id="@+id/from_mts"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="8pt"
                android:text="Metros" />
            <RadioButton
                android:id="@+id/from_km"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="8pt"
                android:text="Kilómetros" />
        </RadioGroup>

        <RadioGroup
            android:id="@+id/to_group_RB"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="30dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnSpan="1">
            <RadioButton
                android:id="@+id/to_cm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="8pt"
                android:text="Centímetros" />
            <RadioButton
                android:id="@+id/to_mts"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="8pt"
                android:text="Metros" />
            <RadioButton
                android:id="@+id/to_km"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="8pt"
                android:text="Kilómetros" />
        </RadioGroup>

        <!-- Botón que ocupa las dos columnas -->
        <Button
            android:id="@+id/convert"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:text="Convertir"
            android:layout_margin="30dp" />

        <TextView
            android:id="@+id/result"
            android:layout_height="50dp"
            android:layout_width="0dp"
            android:layout_columnSpan="2"
            android:gravity="center"
            android:layout_gravity="fill_horizontal"
            android:text="Convertido"/>

    </GridLayout>


</LinearLayout>